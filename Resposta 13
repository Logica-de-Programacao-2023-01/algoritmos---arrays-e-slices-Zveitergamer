package main

import (
	"fmt"
)

func main() {
	// Criando o array de inteiros com 7 elementos
	array := [7]int{1, 2, 3, 4, 5, 6, 7}

	// Solicitando ao usuário que informe um número
	var numero int
	fmt.Print("Digite um número: ")
	fmt.Scan(&numero)

	// Adicionando o número ao primeiro e ao último elemento do array
	array[0] += numero
	array[len(array)-1] += numero

	// Imprimindo o array resultante
	fmt.Println("Array resultante:", array)
}
